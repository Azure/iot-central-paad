{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "sourceMap": true,
    "jsx": "react-native",
    "lib": ["es6"],
    "resolveJsonModule": true,
    "noEmit": true,
    "strict": true,
    "noUnusedLocals": true,
    "target": "es2017",
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "tools/*": ["tools/*"],
      "hooks/*": ["hooks/*"],
      "properties/*": ["properties/*"],
      "contexts/*": ["contexts/*"],
      "sensors/*": ["sensors/*"],
      "components/*": ["components/*"]
    }
  },
  "exclude": [
    "node_modules",
    "src/sensors/health/**/*.ts*",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "creds-generator"
  ]
}
